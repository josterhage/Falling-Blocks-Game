<Window x:Class="Falling_Blocks_Game.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Falling_Blocks_Game"
        mc:Ignorable="d"
        Title="About" Height="290" Width="450"
        WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="187*"/>
            <ColumnDefinition Width="256*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Emperor Penguin - Small.png" HorizontalAlignment="Left" VerticalAlignment="Top" 
               Margin="10,10,0,0" Height="270" Width="172"/>
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" TextWrapping="Wrap" 
                   Text="This clone of a well-known block-falling game is by James Osterhage, as is this crude penguin with a lime bowtie." 
                   TextAlignment="Left" FontFamily="Bookman Old Style"
                   Width="241" Height="241" Margin="0,7,5.2,35.2" Grid.Column="1" />
        <Button Content="Neato" Grid.Column="1" HorizontalAlignment="Center" Height="23" 
                Margin="0,0,0,5" VerticalAlignment="Bottom" Width="102"
                FontFamily="Bookman Old Style" Background="AntiqueWhite" Click="Button_Click"/>

    </Grid>
</Window>
